<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12sp"
        android:weightSum="8">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#cfcfcf"
            android:orientation="horizontal"
            android:weightSum="5">

        <ImageView
                android:id="@+id/drinkIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10sp"
                tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
                android:id="@+id/infoLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="5">

            <TextView
                    android:id="@+id/list_drink_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10sp"
                    android:text="@string/drink_name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/list_drink_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10sp"
                    android:text="@string/drink_type" />

        </LinearLayout>

        <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#cfcfcf"
                app:srcCompat="@android:drawable/ic_menu_delete" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="3">

        <LinearLayout
                android:id="@+id/alcoholAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

            <TextView
                    android:id="@+id/list_alcohol_amount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#b78d0c"
                    android:gravity="center"
                    android:paddingTop="2sp"
                    android:text="2.3"
                    android:textColor="#ffffff"
                    android:textSize="28sp" />

            <TextView
                    android:id="@+id/labelAlcohol"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#b78d0c"
                    android:gravity="center"
                    android:paddingBottom="2sp"
                    android:text="ALCOHOL"
                    android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/drinkAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

            <TextView
                    android:id="@+id/list_drink_amount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="2"
                    android:background="#8d0cb7"
                    android:gravity="center"
                    android:paddingTop="2sp"
                    android:text="1.5"
                    android:textColor="#ffffff"
                    android:textSize="28sp" />

            <TextView
                    android:id="@+id/labelAmount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#8d0cb7"
                    android:gravity="center"
                    android:paddingBottom="2sp"
                    android:text="AMOUNT"
                    android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ratingAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

            <TextView
                    android:id="@+id/list_rating_amount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#0cb78d"
                    android:gravity="center"
                    android:paddingTop="2sp"
                    android:text="4.5"
                    android:textColor="#ffffff"
                    android:textSize="28sp" />

            <TextView
                    android:id="@+id/labelRating"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#0cb78d"
                    android:gravity="center"
                    android:paddingBottom="2sp"
                    android:text="RATING"
                    android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>